@model VerkiezingHelper.Models.IndexModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="col-sm-9">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="pull-left">Partijen</div>
            <div class="pull-right"><button class="btn btn-default" data-toggle="modal" data-target="#addModal">Toevoegen</button></div>
        </div>
        <div class="panel-body">

            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th></th>
                    <th>Naam</th>
                    <th>Lijstrrekker</th>
                    <th>Stemmen</th>
                    <th>% Stemmen</th>
                    <th>Aantal Zetels</th>
                    <th>Details</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var party in Model.Election.Parties)
                {
                    <tr>
                        <td>@Html.CheckBoxFor(x => party.Checked)</td>
                        <td>@party.Name</td>
                        <td>@party.LeadCandidate</td>
                        <td>@Html.TextBoxFor(x => party.AmountOfVotes, new {style = "number"})</td>
                        <td>@(party.PercentOfVotes + "%")</td>
                        <td>@party.AmountOfSeats</td>
                        <td>@Html.ActionLink("&times;", "PartyDetails", "Default", new {id = party.Id})</td>
                    </tr>
                }
                </tbody>
            </table>

        </div>
    </div>
</div>
<div class="col-sm-3">
    <div class="panel panel-default">
        <div class="panel-heading">Controls</div>
        <div class="panel-body">
            @using (Html.BeginForm("SaveElection", "Default", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.Label("Name: ")
                    @Html.TextBoxFor(x => x.Election.Name, new {@class = "input-sm form-control"})
                </div>
                <div class="form-group">
                    @Html.Label("Aantal Zetels: ")
                    @Html.TextBoxFor(x => x.Election.AmountOfSeats, new {@class = "input-sm form-control", type = "number"})
                </div>
                <div class="form-group">
                    <button class="btn btn-default" type="submit">Opslaan</button>
                </div>
            }
        </div>
    </div>
</div>

<div id="addModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Party</h4>
            </div>
            <div class="modal-body">
                
                
                <div class="btn-group">
                    <button type="button" class="btn btn-primary" onclick="location.href = @Html.Action("NewParty")">Nieuw</button>
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        @foreach (var party in Model.Parties)
                        {
                            <li><a href="@("/General/AddToParty/" + party.Id)">@party.Name</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>